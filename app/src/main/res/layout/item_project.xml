<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_proj_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="大源冲村篮球场"
        />

    <TextView
        android:id="@+id/tv_proj_state_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_proj_name"
        android:text="工程状态："/>

    <TextView
        android:id="@+id/tv_proj_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_proj_name"
        android:layout_toRightOf="@+id/tv_proj_state_des"
        android:textColor="@color/darkblue"
        tools:text="在建"/>

    <TextView
        android:id="@+id/tv_proj_host_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_proj_state_des"
        android:text="工程发起人："/>

    <TextView
        android:id="@+id/tv_proj_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_proj_state_des"
        android:layout_toRightOf="@+id/tv_proj_host_des"
        tools:text="董城乡"
        />

    <TextView
        android:id="@+id/tv_proj_des_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_proj_host_des"
        android:text="工程简介："/>
    <TextView
        android:id="@+id/tv_proj_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_proj_host_des"
        android:layout_toRightOf="@+id/tv_proj_des_des"
        tools:text="这个项目由村中多人捐款修建。"
        />

</RelativeLayout>