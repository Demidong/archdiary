<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_add_proj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="添加工程"
        android:textColor="@color/burlywood"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_proj_name"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_add_proj"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="项目工程名称："
        />

    <EditText
        android:id="@+id/et_proj_name"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_add_proj"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_proj_name"
        android:textSize="12sp"
        android:background="@drawable/shape_gray_round"/>

    <TextView
        android:id="@+id/tv_proj_host"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_proj_name"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="项目发起人："
        />

    <EditText
        android:id="@+id/et_proj_host"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/et_proj_name"
        android:layout_below="@+id/tv_proj_name"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_proj_host"
        android:background="@drawable/shape_gray_round"/>

    <TextView
        android:id="@+id/tv_proj_des"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_below="@+id/et_proj_host"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="项目简介："
        />

    <EditText
        android:id="@+id/et_proj_des"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/et_proj_host"
        android:layout_below="@+id/et_proj_host"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_proj_des"
        android:background="@drawable/shape_gray_round"/>

    <TextView
        android:id="@+id/tv_proj_state"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_below="@+id/et_proj_des"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="项目状态："
        />

    <Spinner
        android:id="@+id/spinner_state"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignLeft="@+id/et_proj_des"
        android:layout_below="@+id/et_proj_des"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_proj_state"
        android:entries="@array/projstate"
        >

    </Spinner>

    <TextView
        android:id="@+id/tv_do"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_proj_state"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/shape_gray_round"
        android:gravity="center"
        android:padding="10dp"
        android:text="开工"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_proj_state"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_gray_round"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"/>
</RelativeLayout>