<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_add_staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="记录日工"
        android:textColor="@color/burlywood"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_time_des"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_add_staff"
        android:gravity="center"
        android:textSize="15sp"
        android:text="时间："
        />

    <TextView
        android:id="@+id/tv_work_daytime"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_add_staff"
        android:layout_toRightOf="@+id/tv_time_des"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="2017年3月2号"/>


    <TextView
        android:id="@+id/tv_staff_duration"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_time_des"
        android:gravity="center"
        android:textSize="15sp"
        android:text="做工时长："
        />

    <Spinner
        android:id="@+id/spinner_duration"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_time_des"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_staff_duration"
        android:entries="@array/workduration"
        />

    <TextView
        android:id="@+id/tv_money_des"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_staff_duration"
        android:gravity="center"
        android:textSize="15sp"
        android:text="今日工钱："
        />

    <TextView
        android:id="@+id/tv_work_money"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_staff_duration"
        android:layout_toRightOf="@+id/tv_money_des"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="200元"/>


    <TextView
        android:id="@+id/tv_do"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_money_des"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/shape_gray_round"
        android:gravity="center"
        android:padding="10dp"
        android:text="确定"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_money_des"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_gray_round"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"/>
</RelativeLayout>